<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalUser"
    android:orientation="vertical"
    android:padding="5dp">



    <LinearLayout
        android:id="@+id/layoutId"
        android:layout_width="match_parent"
        android:background="#d1cfcf"
        android:weightSum="6"
        android:layout_height="60dp">

        <Button
            android:id="@+id/HomeBtnId"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/home"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/TheacherBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/employ"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/UserBtnId"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/user"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/NoticeBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/notic"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/JobBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/job"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/PhotosBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/photos"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#1d1b1b"
        android:layout_height="1dp" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="360dp"
                android:layout_height="280dp"
                android:src="@drawable/abdullah"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser2"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnIdjubayer"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnIdjubayer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnIdjubayer"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:src="@drawable/shamimimg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser1"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn1a"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnIdshamim"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnIdshamim"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnIdshamimuser"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                />




            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="360dp"
                android:layout_height="280dp"
                android:src="@drawable/ezba"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser3"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnIdmejba"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnIdmejba"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnIdmejba"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="360dp"
                android:layout_height="280dp"
                android:src="@drawable/hridoy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser4"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnIdPrincipalBTEB"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnIdPrincipalBTEB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnIdPrincipalBTEB"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#000"
                />

        </LinearLayout>
    </ScrollView>











</LinearLayout>