<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FPIUser"
    android:orientation="vertical"
    android:padding="5dp">





    <LinearLayout
        android:id="@+id/layoutId"
        android:layout_width="match_parent"
        android:background="#d1cfcf"
        android:weightSum="6"
        android:layout_height="60dp">

        <Button
            android:id="@+id/HomeBtnId"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/home"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/EmployBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/employ"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/UserBtnId"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/user"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/NoticeBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/notic"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/JobBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/job"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#1d1b1b"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/PhotosBtnId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/photos"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#1d1b1b"
        android:layout_height="1dp" />






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/ezba"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser3"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnId3"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnId3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnId3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="300dp"
                android:src="@drawable/hridoy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser4"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnId4"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnId4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnId4"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#000"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shamimimg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser1"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnIdfpi1"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnId1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtn1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/abdullah"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FCIUser2"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/BTEBbtn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fafafa"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/CallBtnId2"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/emailBtnId2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/messageBtnId2"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_message_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>